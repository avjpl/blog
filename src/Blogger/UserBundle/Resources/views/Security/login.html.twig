{% extends '::base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="large-offset-3 large-6 columns">
            {% if error %}
                <div>{{ error.message }}</div>
            {% endif %}

            <form action="{{ path('login_check') }}" method="post">
                <label for="username">Username:</label>
                <input placeholder="example@aol.com" type="text" id="username" name="_username" value="{{ last_username }}" />

                <label for="password">Password:</label>
                <input placeholder="'**********'" type="password" id="password" name="_password" />

                <input type="hidden" name="_target_path" value="/blog" />

                <button type="submit">login</button>
            </form>
        </div>
    </div>
{% endblock %}