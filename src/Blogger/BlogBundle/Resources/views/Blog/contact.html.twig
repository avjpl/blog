{#{% extends 'BloggerBlogBundle::layout.html.twig' %}#}
{% extends '::base.html.twig' %}

{% block title %}About{% endblock%}

{% block body %}
    <div class="large-12 columns">
        <header>
            <h1>Contact Me</h1>
        </header>

        <form class="large-6" action="{{ path('BloggerBlog_contact') }}" method="post" {{ form_enctype(form) }}>
            {{ form_errors(form) }}

            {{ form_row(form.name) }}
            {{ form_row(form.email) }}
            {{ form_row(form.subject) }}
            {{ form_row(form.body) }}

            {{ form_rest(form) }}

            <input type="submit" value="submit" />
        </form>
    </div>
{% endblock %}