{% for comment in comments %}
    <article id="{{ comment.id }}">
        <header>
            <p><span>{{ comment.user }}</span> commented
                <time datetime="{{ comment.createdAt|date('c') }}">{{ comment.createdAt|date('l, F j, Y') }}</time> </p>
        </header>
        <p>{{ comment.comment }}</p>
    </article>
{% else %}
    <p>There are no comment for the post. Be the first to comment&hellip;</p>
{% endfor %}