<!DOCTYPE html>
<!--[if IE 8]>         <html class="no-js ie8"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js"> <!--<![endif]-->
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <title>{% block title %}Home{% endblock %}</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <link rel="stylesheet" href="{{ asset('css/styles.css') }}" />
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

        <script src="{{ asset('bower_components/modernizr/modernizr.js') }}"></script>
    </head>

    <body>
        <!--[if lt IE 8]>
            <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
        <![endif]-->

        <section id="header">
            <div class="row">
                <header>
                    <div class="large-12 columns">
                        <h1>Adrian Lawrence</h1>

                        <nav>
                            <ul>
                                <li>
                                    <!-- will be under Home bundle -->
                                    <a href="#">Home</a>
                                </li>

                                <li>
                                    <a href="{{ path('BloggerBlog_homepage') }}">Blog</a>
                                </li>

                                <li>
                                    <!-- will be under Portfolio bundle -->
                                    <a href="#">Portfolio</a>
                                </li>

                                <li>
                                    <!-- will be under Contact bundle -->
                                    <a href="#">Contact</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </header>
            </div>
        </section>

        <main>
            <section id="main">
                {% block body %}
                    {% block body_inner %}{% endblock %}
                {% endblock %}
            </section>
        </main>

        <section id="footer">
            <!--<div class="row">
                <footer>
                    <div class="large-12 columns">
                        Sysmfony2 blog tuts
                    </div>
                </footer>
            </div>-->
            {% block footer %}{% endblock %}
        </section>

        <script data-main="{{ asset('js/main') }}" src="{{ asset('bower_components/requirejs/require.js') }}"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>